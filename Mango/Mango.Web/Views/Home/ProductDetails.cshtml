@model ProductDTO

<form method="post">
    <input asp-for="ProductId" hidden />
    <div class="pt-4">
        <div class="card container w-75">
            <div class="card-header bg-dark text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning">@string.Format("{0:c}", Model.Price)</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="width:300px; height:300px; object-fit: cover" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="h-75 row pl-3">
                                <div class="col-12">
                                    <span class="badge bg-warning text-white p-3 mt-3">@Model.CategoryName</span>
                                    <p class="text-white pt-3">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>
                            <div class="row mx-0" style="display:flex; justify-content:end">
                                <input asp-for="Quantity" class="form-control w-25" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-dark">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="w-50 btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                </div>
                <div class="col-12 col-md-6" style="display:flex; justify-content:end">
                    <button type="submit" class="w-50 btn btn-primary form-control btn-lg" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}