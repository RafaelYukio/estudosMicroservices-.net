@model RegisterRequestDTO

<form method="post" class="d-flex justify-content-center w-100">
    <div class="bg-primary rounded p-4 w-50">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="w-75 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
            </div>
            <div class="w-75 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Name..." />
            </div>
            <div class="w-75 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber..." />
            </div>
            <div class="w-75 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
            </div>
            <div class="w-75 pb-4">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>

            <div class="w-75 pb-4">
                <button type="submit" class="form-control btn-success" valu="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}